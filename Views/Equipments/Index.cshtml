@model OFAMA.Models.EquipmentViewModel

@{
    ViewData["Title"] = "Index";
}

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <!--==============レイアウトを制御する独自のCSSを読み込み===============-->
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/acordionpanel.css" />
</head>
<h3 class="heading">備品データ一覧</h3>

<p>
   

        <a asp-action="Create" class="btn btn-primary btn-lg">新規データ登録</a>
       
        <form asp-controller="Equipments" asp-action="Index" method="get">
          
            <input type="submit" value="検索条件のリセット" class="btn btn-outline-primary btn-lg" />
        </form>

   
</p>

<form asp-controller="Equipments" asp-action="Index" method="get">
    <ul class="accordion-area">
        <li>
            <section>
                <h3 class="accordiontitle">絞り込み検索</h3>
                <div class="accordionbox">
                    <div>
                        @Html.DisplayNameFor(model => model.Equipments[0].ItemName)
                    </div>

                    <div><input type="text" asp-for="SearchString" /></div>
                    <div>
                        @Html.DisplayFor(model => model.Equipments[0].IsExpandable)
                    </div>
                    <div><select asp-for="SearchExpandableString" asp-items="Model.Expandables"> <option value="">全て</option> </select></div>

                    <div><input type="submit" value="検索" class="btn btn-primary" /></div>

                </div>

            </section>
        </li>
    </ul>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"
                integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
                crossorigin="anonymous"></script>


        <script src="~/js/accordionpanel.js"></script>
</form>

<div class="table-responsive">
    <table class="table table-hover" id="Table">
    <thead>
        <tr class="table-secondary">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Equipments[0].ItemName)
            </th>
                <th class="text-center">
                @Html.DisplayNameFor(model => model.Equipments[0].IsExpandable)
            </th>
                <th class="text-center">
                @Html.DisplayNameFor(model => model.Equipments[0].Created_at)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Equipments[0].Updated_at)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Equipments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.IsExpandable)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Created_at)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Updated_at)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">編集</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">削除</a>
            </td>
        </tr>
}
    </tbody>
</table>
    <button id="show-all-btn" class="btn btn-primary">すべて表示</button>
</div>
