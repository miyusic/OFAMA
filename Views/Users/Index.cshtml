@model IEnumerable<OFAMA.Models.UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <!--==============レイアウトを制御する独自のCSSを読み込み===============-->
    <link rel="stylesheet" type="text/css" href="~/css/acordionpanel.css" />


</head>
<h3 class="heading">ユーザー管理画面</h3>



<div>
    <div class="table-responsive">
        <table class="table table-hover" id="Table">
    <thead>
        <tr class="table-secondary">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model =>model.UserRoleSum)
            </th>
            <th class="text-center">
                <text>
                    ステータス
                </text>
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.UserRoleSum)
                </td>
                <td class="text-center">
                    @if(item.UserRoleSum != 0)
                    {
                        <text>
                            在籍
                        </text>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">パスワードリセット</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">付与ロール確認</a> 
                    <a asp-controller="Role" asp-action="EditRoleAssignment" asp-route-id="@item.Id" class="btn btn-info btn-sm">ロール付与</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">削除</a> 
                </td>
            </tr>
            
        }
    </tbody>
    
</table>
        <button id="show-all-btn" class="btn btn-primary">すべて表示</button>
</div>
