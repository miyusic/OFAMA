@model IEnumerable<OFAMA.Models.UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <!--==============レイアウトを制御する独自のCSSを読み込み===============-->
    <link rel="stylesheet" type="text/css" href="~/css/acordionpanel.css" />


</head>
<h3 class="heading">ユーザー管理</h3>



<div style="text-align:center">
    <table  class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailConfirmed)
            </th>
                
            <th>
                @Html.DisplayNameFor(model => model.UserRoles)
            </th>
                <th></th>
            <th></th>
                
                <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.EmailConfirmed)
                </td>
                
                @for (int i = 0; i < item.UserRoles.Count; i++)
                {
                    <td>
                        @Html.DisplayFor(modelThing => item.UserRoles[i].IsInThisRole)
                        @Html.DisplayFor(modelThing => item.UserRoles[i].RoleName)

                    </td>
                }
                <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">ResetPassword</a>
                        <a asp-controller="Role" asp-action="EditRoleAssignment" asp-route-id="@item.Id" class="btn btn-info btn-sm">AddStatus</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a> 
                       
                </td>
            </tr>
            
        }
    </tbody>
    
</table>
</div>
