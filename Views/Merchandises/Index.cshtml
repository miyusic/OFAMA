@model  OFAMA.Models.MerchandiseViewModel

@{
    ViewData["Title"] = "Index";
}

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <!--==============レイアウトを制御する独自のCSSを読み込み===============-->
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/acordionpanel.css" />


</head>
<h3 class="heading">商品データ一覧</h3>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg">新規データ登録</a>
    <form asp-controller="Merchandises" asp-action="Index" method="get">
        <p>
            <input type="submit" value="検索条件のリセット" class="btn btn-outline-primary btn-lg" />
        </p>
    </form>
</p>

<form asp-controller="Merchandises" asp-action="Index" method="get">


    <ul class="accordion-area">
        <li>
            <section>
                <h3 class="accordiontitle">絞り込み検索</h3>
                <div class="accordionbox">

                    <div>
                        @Html.DisplayNameFor(model => model.Merchandises[0].ItemName)
                    </div>
                    <div>
                        <input type="text" asp-for="SearchString" />
                    </div>

                    <div>
                        @Html.DisplayNameFor(model => model.Merchandises[0].Kind)
                    </div>
                    <div>
                        <select asp-for="MerchKind" asp-items="Model.Kinds">
                            <option value="">全て</option>
                        </select>
                    </div>
                    <div>
                        @Html.DisplayNameFor(model => model.Merchandises[0].Created_yaer)
                    </div>
                    <div>
                        <select asp-for="MerchYear" asp-items="Model.Years">
                            <option value="">全て</option>
                        </select>
                    </div>

                    <div><input type="submit" value="検索" class="btn btn-primary" /></div>

                </div>

            </section>
        </li>

        <script src="https://code.jquery.com/jquery-3.4.1.min.js"
                integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
                crossorigin="anonymous"></script>


        <script src="~/js/accordionpanel.js"></script>
</form>

<div class="table-responsive">
    <table class="table table-hover" id="Table">
    <thead>
        <tr class="table-secondary">
            <th scope="col" class="text-center">
                @Html.DisplayNameFor(model => model.Merchandises[0].ItemName)
            </th>
            <th scope="col" class="text-center">
                @Html.DisplayNameFor(model => model.Merchandises[0].Price)
            </th>
            <th scope="col" class="text-center">
                @Html.DisplayNameFor(model => model.Merchandises[0].Kind)
            </th>
            <th scope="col" class="text-center">
                @Html.DisplayNameFor(model => model.Merchandises[0].Created_yaer)
            </th>
             <th scope="col" class="text-center">
                @Html.DisplayNameFor(model => model.Merchandises[0].Created_at)
            </th>
             <th scope="col" class="text-center">
                @Html.DisplayNameFor(model => model.Merchandises[0].Updated_at)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Merchandises)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Price)円
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kind)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Created_yaer)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Created_at)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Updated_at)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">編集</a> 
                    <!-- <a asp-action="Details" asp-route-id="@item.Id">Details</a> |-->
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">削除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    <button id="show-all-btn" class="btn btn-primary">すべて表示</button>
</div>
